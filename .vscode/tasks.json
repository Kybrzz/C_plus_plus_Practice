{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build (Debug)", // 1 of 2 configs (debug)
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always", // colored compiler output in terminal (preset 1/4)
                // exclusive to debug 
                "-g3", // max debug info
                "-ggdb", // generates debug symbols for GDB
                "-O0", // disables optimizations 
                "-D_GLIBCXX_ASSERTIONS", // extra libstdc++ runtime checks
                // included in release
                "-pedantic-errors", // turns any non-standard C++ usage into errors, not j warnings 
                "-Wall", // baseline warning set
                "-Wextra", // more warnings beyond wall
                "-Wshadow", // warns when a name is shadowed 
                "-Wconversion", // warns on implicit/narrowing conversions
                "-Woverloaded-virtual", // overloaded-virtual warnings
                "-Wsign-conversion", // warns when signed/unsigned type mixing
                "-std=c++23", // uses most recent C++ language standard
                // defaults and presets 
                "${file}", // compiles the active file (preset 2/4)
                "-o", // outputs + (preset 3/4)
                "${fileDirname}\\app.exe" // + exe path (preset 4/4); modified to delete end nd use 'app' instead; ensure comment is not after this 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug build: zero optimization, strict warnings"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Build (Release)", // 2 of two configs (release)
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always", // colored compiler output in terminal
                // exclusive to release
                "-O2", // safe optimizer for speed
                "-DNDEBUG", // disables assert() in release 
                "-Werror", // treats warnings as errors 
                // included in debug 
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wconversion",
                "-Woverloaded-virtual",
                "-Wsign-conversion",
                "-std=c++23",
                // defaults and presets 
                "${file}", // compiles active file 
                "-o", // output + 
                "${fileDirname}\\app.exe" // + exe path; ensure comma is not after this 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build", // non-default build group entry 
            "detail": "Release build: optimized, asserts off, strict warnings"
        }
    ]
}